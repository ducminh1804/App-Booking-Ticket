<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComboPageActivity">


    <LinearLayout
        android:id="@+id/btn_backpage"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/backpage_paypage" />

        <TextView
            android:id="@+id/txt_btn_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingRight="30dp"
            android:text="Combo"
            android:textColor="@color/purple"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_show_cb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_combo_paypage"
        android:clickable="true"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btn_backpage">

        <TextView
            android:id="@+id/txt_cb"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="COMBO 2 NGĂN"
            android:textColor="@color/yellow"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/arrow_image_view"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_right_paypage" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/listCB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_cb"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/cb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_item_elevation_paypage"
            android:elevation="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cb1"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_image_paypage"
                android:padding="5dp"
                android:src="@drawable/cb1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cb2ngan_L1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Combo Solo 2 ngăn - VOL"
                    android:textColor="@color/purple"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Cb2ngan_L1_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1 Coke 32oz - V + 1 Bắp 2 ngăn 64oz PM + CARAMEL"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/price_cb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="119.000 đ"
                    android:textColor="@color/purple"
                    android:textSize="22dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_up_down_text_1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_up_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_up_paypage"
                    android:textSize="24dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/soluongcb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18dp"
                    tools:ignore="DuplicateIds" />

                <Button
                    android:id="@+id/btn_down_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_down_paypage"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_item_elevation_paypage"
            android:elevation="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cb2"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/bg_image_paypage"
                android:src="@drawable/cb2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cb2ngan_L2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Combo Party 2 ngăn - VOL"
                    android:textColor="@color/purple"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Cb2ngan_L2_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="4 Coke 22oz - V + 2 Bắp 2 ngăn 64oz PM + CARAMEL"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/price_cb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="159.000 đ"
                    android:textColor="@color/purple"
                    android:textSize="22dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_up_down_text_2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_up_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_up_paypage"
                    android:textSize="24dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/soluongcb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18dp"
                    tools:ignore="DuplicateIds" />

                <Button
                    android:id="@+id/btn_down_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_down_paypage"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_item_elevation_paypage"
            android:elevation="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cb3"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/bg_image_paypage"
                android:src="@drawable/cb3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cb2ngan_L3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Combo Couple 2 ngăn - VOL"
                    android:textColor="@color/purple"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Cb2ngan_L3_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2 Coke 32oz - V + 1 Bắp 2 ngăn 64oz PM + CARAMEL"
                    android:textColor="@color/purple"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/price_cb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="259.000 đ"
                    android:textColor="@color/purple"
                    android:textSize="22dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_up_down_text_3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_up_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_up_paypage"
                    android:textSize="24dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/soluongcb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18dp"
                    tools:ignore="DuplicateIds" />

                <Button
                    android:id="@+id/btn_down_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_down_paypage"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_total_elevation_paypage"
        android:elevation="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/bg_total"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/soGhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Ghế: A03"
                android:textColor="@color/purple"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tổng cộng: 95000đ"
                android:textColor="@color/purple"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/nextPage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_nextpage_paypage"
            android:src="@drawable/ic_nextpage_paypage"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>